{% extends 'partials/layout.html.twig' %}

{% block content %}

    <section class="page-section">
        <h2 class="title-page">Inscription</h2>
        <div id="formContent">
            <form id="signupForm" action="index.php?action=signup" method="post">

            {% set errors = session('errors') %}

                <label for="lastname">Nom :</label>
                <input type="text" id="lastname" name="lastname" autocomplete="off" required>
                {% if errors.nom %}
                    <p class="error-message">{{ errors.nom }}</p>
                {% endif %}

                <label for="firstname">Prénom :</label>
                <input type="text" id="firstname" name="firstname" autocomplete="off" required>
                {% if errors.prenom %}
                    <p class="error-message">{{ errors.prenom }}</p>
                {% endif %}
                
                <label for="email">Adresse e-mail:</label>
                <input type="email" id="email" name="email" autocomplete="off" required>
                {% if errors.email %}
                    <p class="error-message">{{ errors.email }}</p>
                {% endif %}

                <label for="password">Mot de passe:</label>
                <input type="password" id="password" name="password" required>
                {% if errors.password %}
                    <p class="error-message">{{ errors.password }}</p>
                {% endif %}<br>

                <button class="bouton" type="submit">S'inscrire</button>
            </form>
        </div>
        <div class="switch">
            <p>Vous avez déjà un compte ? <a href="index.php?action=login">Connectez-vous</a></p>
        </div>
    </section>

{% endblock %}
