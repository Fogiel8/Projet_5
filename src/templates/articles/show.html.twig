{% extends 'partials/layout.html.twig' %}

{% block content %}

<div id="post_content">
    <h2>{{ article.titre }}</h2>
    <article>{{ article.contenu }}</article><br>
    <div id="auteur_date-crea">
        <p id="auteur">Rédigé par {{ article.auteur.nom }} {{ article.auteur.prenom }}</p>
        <p class="date-crea">le {{ article.getDateCreation() }}</p>
        {% if article.getDateMaj() != '' %}
        <p class="date-crea">le {{ article.getDateMaj() }}</p>
        {% endif %}
    </div>
</div>

<div id="comments">
    <h2>Commentaires</h2>
    {% for comment in comments %}
        <div class="comment">
            <h3>4545{{ comment.nom }} {{ comment.prenom }}</h3>
            <p class="comment_txt">dfgd{{ comment.comment }}</p>
            <p class="date_comment">dfg{{ comment.date }}</p>
        </div>
    {% endfor %}

    <div>
    <form id="addComment" action="index.php?action=comment" method="post">              
            <label for="comment">commentaire :</label>
            <input type="text" id="comment" name="comment" placeholder="Commentaire" autocomplete="off" required><br>

            <button class="bouton" type="submit">Envoyer</button>
        </form>
    </div>
</div>

{% endblock %}
